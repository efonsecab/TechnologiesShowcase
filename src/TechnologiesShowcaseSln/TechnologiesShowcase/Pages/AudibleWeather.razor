@page "/AudibleWeather"
<h3>Index</h3>

<TechnologiesShowcase.Components.Spinners IsLoading="IsLoading"></TechnologiesShowcase.Components.Spinners>
@if (Latitude != null && Longitude != null)
{
    <div class="row">
        <div class="col"><span>Latitude: </span>@Latitude</div>
        <div class="col"><span>Longitude: </span>@Longitude</div>
        @if (CoordinateAudioBase64 != null)
        {
            <div class="col">
                <audio controls src="data:audio/mp3;base64, @CoordinateAudioBase64" autoplay></audio>
            </div>
        }
    </div>
}